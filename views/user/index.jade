extends layout

block append header
	link(rel="stylesheet" href="/css/user/main.css")

block before_main
	#before_main
		.layout_inside
			#slider_container.slider.darkblue
				.slides(u='slides')
					- each g, key in gallery
						div
							- var src = '/img/user/banner/' + g.img
							img(src=src)
							.text
								.adorable_table
									.adorable_cell
										.top_label !{g.top_label}
										.label.novito_nova !{g.label}
										a.link.lightblue_font(href=g.link.href) !{g.link.title}
				
				.jssorb12(u='navigator')
					div(u='prototype', class='prototype rounded ')
				span(u='arrowleft', class='jssora21l ')
				span(u='arrowright', class='jssora21r ')
				
				include ../helpers/user/live_program/live_program
				include ../helpers/user/join_tour/join_tour

block content
	.content
		.left.border_boxed.white
			.content_block
				.adorable_table
					.adorable_cell
						.top_label А у нас
						.label.novito_nova.dark_font
							| Сегодня
							br
							| в меню
						a(href="/products")
							button.blue Еще
			
			a(href = '/products')
				.content_block
					.adorable_table
						.adorable_cell
							img.product_img(src="/img/user/main/Agysha_paket_sok_apple_light_200g.jpg")
							.product_label Фруктовые соки
			
			a(href = '/products')
				.content_block
					.adorable_table
						.adorable_cell
							img.product_img(src="/img/user/main/Agysha_yogyrt_zlaki1.jpg")
							.product_label Детские йогурты
			
			a(href = '/products')
				.content_block
					.adorable_table
						.adorable_cell
							img.product_img(src="/img/user/main/AgushaPack.cereals_100g_s.jpg")
							.product_label Детские творожки
		
		.right.border_boxed.green.adorable_table
			.adorable_cell
				.label.novito_nova
					| Что малышу
					br
					| для счастья надо?
				
				.top_label
					| Узнайте через
				
				.count
					- each d, key in daysArray
						.number
							span #{d}
				
				.top_label #{declension}
				
				a(href="/signup")
					button.middle_button.yellow Зарегистрироваться

block append scripts
	script(src="/js/plugins/slider/jssor.core.js")
	script(src="/js/plugins/slider/jssor.utils.js")
	script(src="/js/plugins/slider/jssor.slider.js")
	script(src="/js/user/main.js")