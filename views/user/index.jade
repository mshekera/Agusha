extends layout

block append header
	link(rel="stylesheet" href="/css/user/main.css")

block content
	#slider_container.slider.darkblue
		.slides(u='slides')
			- each g, key in gallery
				div
					img(src='/img/user/banner/banner_1_1.png')
					.text
						.adorable_table
							.adorable_cell
								.top_label !{g.top_label}
								.label.novito_nova !{g.label}
								a.link.lightblue_font(href=g.link.href) !{g.link.title}
		
		.jssorb12(u='navigator')
			div(u='prototype', class='prototype rounded ')
		span(u='arrowleft', class='jssora21l ')
		span(u='arrowright', class='jssora21r ')
		
		include ../helpers/user/live_program/live_program
		include ../helpers/user/join_tour/join_tour
	
	.content
		.left.border_boxed.white
			.content_block
				.adorable_table
					.adorable_cell
						.top_label А у нас
						.label.novito_nova.dark_font
							| Сегодня
							br
							| в меню
						button.blue Еще
			
			.content_block
				.adorable_table
					.adorable_cell
						img.product_img(src="/img/user/main/juice.png")
						.product_label
							| Фруктовые
							br
							| соки
			
			.content_block
				.adorable_table
					.adorable_cell
						img.product_img(src="/img/user/main/yogurt.png")
						.product_label
							| Детские
							br
							| йогурты
			
			.content_block
				.adorable_table
					.adorable_cell
						img.product_img(src="/img/user/main/curd.png")
						.product_label
							| Детские
							br
							| творожки
			
		.right.border_boxed.green.adorable_table
			.adorable_cell
				.label.novito_nova
					| Что малышу
					br
					| для счастья надо?
				
				.top_label
					| Узнайте через
				
				.count
					.number
						span 1
					.number
						span 2
					.number
						span 6
					
				.top_label
					| Дней
				
				a(href="/registration")
					button.middle_button.yellow Зарегистрироваться

block append scripts
	script(src="/js/plugins/slider/jssor.core.js")
	script(src="/js/plugins/slider/jssor.utils.js")
	script(src="/js/plugins/slider/jssor.slider.js")
	script(src="/js/user/main.js")