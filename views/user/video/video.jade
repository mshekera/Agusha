extends ../layout

block append header
	link(rel="stylesheet" href="/css/user/video/video.css")

block append content
	#video.content
		include ../../helpers/user/breadcrumbs/breadcrumbs
		
		.white
			.pentagon
				- each v, key in videos
					.video_title.video_selector.label.novito_nova(class = v.id + (key == 0 ? ' active' : '')) #{v.title}
			
			.video_container.video_inside
				- each v, key in videos
					.video_block.video_selector(class = v.id + (key == 0 ? ' active' : ''), data-id=v.id)
						object(frameborder="0", width="100%", height="100%", data="http://youtube.com/embed/" + v.id, wmode="transparent", allowscriptaccess="always", allowfullscreen="true")
			
			.video_social.video_inside
				.adorable_table
					.adorable_cell
						.share_buttons
							.share_button
								img(src="/img/user/social/vk.png")
							
							.share_button
								img(src="/img/user/social/odnoklasniki.png")
							
							.share_button
								img(src="/img/user/social/google.png")
							
							.share_button
								img(src="/img/user/social/facebook.png")
							
							.share_button
								img(src="/img/user/social/twitter.png")
						
						.channel_link
							span.text Смотрите наш канал на youtube
							a(href="http://youtube.com/agushaukraine", target="_blank")
								.youtube_img
				
				img.channel_arrow(src="/img/user/video/arrow.png")
			
			.more_videos_container
				.more_videos.video_inside
					#video_gallery
						- each v, key in videos
							.small_video_block.video_selector(class = v.id + (key == 0 ? ' active' : ''))
								.small_video_content.border_boxed
									.small_video_clicker(data-id=v.id)
										.image_container
											.image(style="background: url('http://i.ytimg.com/vi/" + v.id + "/hqdefault.jpg') center center / 320px 240px;")
											.youtube_img
										.text.adorable_table.border_boxed
											.adorable_cell
												.title #{v.title}
												.date date
				
				.arrow_left
				.arrow_right
		
		include ../../helpers/user/join_tour_full/join_tour_full

block append scripts
	script(src="/js/plugins/can/can.js")
	script(src="/js/plugins/slick/slick.min.js")
	script(src="/js/user/video/video.js")