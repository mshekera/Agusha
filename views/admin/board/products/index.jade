extends ../layout

block append header
    link(href="../css/admin/datatables/dataTables.bootstrap.css" rel="stylesheet" type="text/css")

block append scripts
    script(src="../js/admin/plugins/datatables/jquery.dataTables.js" type="text/javascript")
    script(src="../js/admin/plugins/datatables/dataTables.bootstrap.js" type="text/javascript")

block content
    .box
        .box-header
            h3.box-title= "Список продуктов"
        .box-body.table-responsive
            table.table.table-bordered.table-striped(id="example1")
                thead
                    tr
                        th= "Название"
                        th= "Срок хранения"
                        th= "Состав"
                        th= "Объем"
                        th= "Возраст"
                        th= "Действия"
                tbody
                    each item in products
                        tr
                            td= item.title
                            td= item.storage_life
                            td= item.composition
                            td= item.volume
                            td= item.age.title
                            td
                                a(href="product/"|item._id)
                                    i.glyphicon.glyphicon-edit
                                a(href="product/delete/"|item._id)
                                    i.glyphicon.glyphicon-remove-circle