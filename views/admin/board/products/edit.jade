extends ../layout

block append header
    link(href="/css/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css" rel="stylesheet" type="text/css")

block append scripts
    script(src="../js/admin/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js")
    script.
        $(function() {
            $(".textarea").wysihtml5();
        });

block content
    section.content
        .row
            .col-md-6
                .box.box-primary
                    .box-header
                        .box-title= "Редактирование товара"
                    form(role="form")
                        .box-body
                            .form-group
                                label(for="title")= "Название:"
                                input.form-control(type="text" name="title" placeholder="Наименование продукта")
                            .form-group
                                label(for="text")= "Описание:"
                                textarea.textarea(placeholder="Описание продукта" style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;")
                            .form-group
                                label(for="image")= "Изображение:"
                                input.form-control(type="file" name="image")
                            .form-group
                                label(for="storage_life")= "Срок хранения:"
                                input.form-control(type="text" name="storage_life" placeholder="Срок хранения продукта")
                            .form-group
                                h4= "Состав продукта:"
                                .checkbox
                                    label
                                        input(type="checkbox")
                                        span= "Клубника"
                                .checkbox
                                    label
                                        input(type="checkbox")
                                        span= "Гвозди"
                                .checkbox
                                    label
                                        input(type="checkbox")
                                        span= "Нателло вместо тысячи слов"
                            .form-group
                                label(for="volume")= "Объем:"
                                input.form-control(type="text" name="volume" placeholder="Объем продукта:")
                            .form-group
                                label= "Возраст:"
                                .radio
                                    label
                                        input(type="radio" name="age" value="option1" checked)
                                        span= "1-3"
                                .radio
                                    label
                                        input(type="radio" name="age" value="option1" checked)
                                        span= "4-6"
                                .radio
                                    label
                                        input(type="radio" name="age" value="option1" checked)
                                        span= "7-9"
                                
                        .box-footer
                            button.btn.btn-primary(type="submit")= "Сохранить изменения"